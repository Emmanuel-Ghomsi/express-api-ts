{
  "name": "express-api-ts",
  "version": "1.0.0",
  "description": "A basic starter for an express.js API with Typescript",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest --verbose --passWithNoTests",
    "test-watch": "jest --verbose --watchAll",
    "dev": "concurrently -k -n \"Typescript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"nodemon dist/src/index.js\"",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint --ignore-path .eslintignore \"src/**/*.ts\" --fix",
    "lint:check": "eslint --ignore-path .eslintignore \"src/**/*.ts\"",
    "prepare": "husky install",
    "build": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "mongoose",
    "morgan",
    "eslint",
    "prettier",
    "jest",
    "supertest",
    "husky",
    "inversify",
    "winston",
    "jwt",
    "swagger",
    "nodemailer",
    "concurrently",
    "zod",
    "typegoose",
    "helmet",
    "dotenv",
    "bcrypt"
  ],
  "author": {
    "name": "Emmanuel Ghomsi Ghomsi",
    "email": "emmanuelghomsi21@gmail.com",
    "url": "https://github.com/Emmanuel-Ghomsi"
  },
  "homepage": "https://github.com/Emmanuel-Ghomsi/express-api-ts.git#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Emmanuel-Ghomsi/express-api-ts.git.git"
  },
  "bugs": {
    "url": "https://github.com/Emmanuel-Ghomsi/express-api-ts.git/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@typegoose/typegoose": "^11.4.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.4.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.4",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
